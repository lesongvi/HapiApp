<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Fragment.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <fragment
            android:id="@+id/fragmentbanner"
            android:name="com.example.scheduleproject.Fragment.BannerFragment"
            android:layout_width="match_parent"
            android:layout_height="150dp">

        </fragment>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
           android:layout_gravity="center"
            >

            <TableRow>


                <Button
                    android:id="@+id/btn_thongtin"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="20dp"
                    android:drawableTop="@drawable/ic_school"
                    android:text="Thông tin "
                  />

                <Button
                    android:id="@+id/btn_diem"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:drawableTop="@drawable/ic_mark"
                    android:text="Xem điểm" />
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btn_lichthi"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="lịch thi"
                    android:layout_marginRight="20dp"
                    android:drawableTop="@drawable/ic_exam_schedu"/>

                <Button
                    android:id="@+id/btn_thoikhoabieu"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:text="Thời khóa biểu"
                    android:drawableTop="@drawable/ic_shedule"/>
            </TableRow>


            <TextView
                android:id="@+id/btn_dgrl"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Đánh giá rèn luyện"
                android:layout_marginTop="10dp"
                android:textSize="20dp"/>

        </TableLayout>
    </LinearLayout>

</ScrollView>