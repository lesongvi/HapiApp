<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AccountFragment"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:id="@+id/image_profile"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Photo"
            android:layout_gravity="center"
            android:id="@+id/tv_change"
            android:textColor="@color/black"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản"
            android:textSize="30dp"
            android:paddingTop="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/txtMSSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:text="Mã số sinh viên"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/MSSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtMSSV"
            android:text="Mã số của sv"
            android:textSize="20dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20dp"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:layout_below="@+id/txtMSSV"/>
        <TextView
            android:id="@+id/EditEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtMSSV"
            android:layout_toRightOf="@+id/txtEmail"
            android:paddingTop="10dp"
            android:text="Mail của sv"
            android:textSize="20dp"
            android:paddingLeft="100dp"/>
        <TextView
            android:id="@+id/txtSDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:layout_below="@+id/txtEmail"/>
        <TextView
            android:id="@+id/EditSDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEmail"
            android:layout_toRightOf="@+id/txtSDT"
            android:paddingTop="10dp"
            android:text="SDT của sinh viên"
            android:textSize="20dp"
            android:paddingLeft="30dp"/>
        <TextView
            android:id="@+id/ChangPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:layout_below="@+id/txtSDT"/>

        <TextView
            android:id="@+id/Logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:text="Đăng xuất"
            android:textSize="20dp"
            android:layout_below="@id/ChangPass"/>

    </RelativeLayout>

</LinearLayout>